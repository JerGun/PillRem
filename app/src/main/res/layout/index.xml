<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="40dp"
                android:src="@mipmap/ic_main"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <RelativeLayout
                    android:id="@+id/profile_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/profile"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@mipmap/ic_profile_128px"
                        android:background="@drawable/rounded_button_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="โปรไฟล์"
                        android:textSize="15sp"
                        android:layout_below="@+id/profile"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/alarm_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/profile_frame">

                    <ImageButton
                        android:id="@+id/alarm"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@mipmap/ic_alarm_128px"
                        android:background="@drawable/rounded_button_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/alarm"
                        android:layout_centerHorizontal="true"
                        android:text="แจ้งเตือนกินยา"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/appointment_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/profile_frame"
                    android:layout_toEndOf="@+id/alarm_frame">

                    <ImageButton
                        android:id="@+id/appointment"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@mipmap/ic_appointment_128px"
                        android:background="@drawable/rounded_button_white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="นัดหมาย"
                        android:textSize="15sp"
                        android:layout_below="@+id/appointment"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:id="@+id/button_logout"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button_yellow"
                android:text="ออกจากระบบ"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>